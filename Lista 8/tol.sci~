function [tolerancia] = tol(A, p)
         
         if (argn(2) = 2) then
            
            tolerancia = 0;
               for i = 1 : n
                  for j = 1 : n
                      if (i > j) then
                         if (A(i,j) > p) then
                             tolerancia = 1;
                         end  
                      end
                  end
               end
            
         end
         
endfunction
